+				return -EINVAL;
+			}
+			mrt->vif_table[vifi].pkt_out += pkts_out;
+			mrt->vif_table[vifi].bytes_out += bytes_out;
+		}
+	}
+	spin_unlock(&mrt_lock);
+	rcu_read_unlock();
+
+	return 0;
